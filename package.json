{
  "name": "curk-website",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "CURK - AI-Powered Website Analysis & Lead Generation Platform",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "NODE_ENV=production vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "docker:build": "docker build -t curk-website .",
    "docker:run": "docker run -p 80:80 curk-website",
    "docker:push": "docker tag curk-website gcr.io/$PROJECT_ID/curk-website:latest && docker push gcr.io/$PROJECT_ID/curk-website:latest",
    "deploy:gcp": "gcloud builds submit --config cloudbuild.yaml .",
    "deploy:local": "npm run build && npm run docker:build && npm run docker:run"
  },
  "dependencies": {
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^7.1.2"
  }
}
